<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<!--        <Widget.EditInputView-->
<!--            android:layout_marginTop="20dp"-->
<!--            android:id="@+id/edi_title"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="50dp"-->
<!--            app:inputMarginStart="10dp"-->
<!--            app:headerText="  任务名称"-->
<!--            app:headerTextSize="25sp"-->
<!--            app:headerTextStyle="bold"-->
<!--            app:textSize="25sp"-->
<!--            android:inputType="text"-->
<!--            app:maxLength="10" />-->
        <LinearLayout
            android:id="@+id/avatar"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:clickable="true">
            <TextView
                android:id="@+id/tv_avatar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="头像"
                android:textSize="25sp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textColor="#2B303C"
                android:textStyle="bold"
                android:layout_marginLeft="10dp" />
            <com.makeramen.roundedimageview.RoundedImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/imv_avatar"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="25dp"
                android:scaleType="fitCenter"
                app:riv_border_color="@color/white"
                app:riv_border_width="2dp"
                app:riv_corner_radius="10dp"
                app:riv_mutate_background="true"
                app:riv_oval="false"
                app:riv_tile_mode="clamp"
                android:src="@mipmap/ic_launcher" />
        </LinearLayout>
        <View
            android:layout_below="@id/avatar"
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#DDDDDD"
            android:layout_marginTop="3dp"/>
        <Widget.EditInputView
            android:id="@+id/edi_name"
            android:layout_below="@id/divider1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:inputMarginStart="10dp"
            app:headerText="  昵称"
            app:headerTextSize="25sp"
            app:headerTextStyle="bold"
            app:textSize="25sp"
            android:inputType="text"
            app:maxLength="10" />
        <View
            android:layout_below="@id/edi_name"
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#DDDDDD"
            android:layout_marginTop="3dp"/>
        <Widget.EditInputView
            android:id="@+id/edi_gender"
            android:layout_below="@id/divider2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:inputMarginStart="10dp"
            app:headerText="  性别"
            app:headerTextSize="25sp"
            app:headerTextStyle="bold"
            app:textSize="25sp"
            android:inputType="text"
            app:maxLength="10"
            android:cursorVisible="false"
            android:textCursorDrawable="@null"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:clickable="true"/>
        <View
            android:layout_below="@id/edi_gender"
            android:id="@+id/divider4"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#DDDDDD"
            android:layout_marginTop="3dp"/>
        <Widget.EditInputView
            android:id="@+id/edi_birthday"
            android:layout_below="@id/divider4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:inputMarginStart="10dp"
            app:headerText="  生日"
            app:headerTextSize="25sp"
            app:headerTextStyle="bold"
            app:textSize="25sp"
            android:inputType="text"
            app:maxLength="10"
            android:cursorVisible="false"
            android:textCursorDrawable="@null"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:clickable="true"/>
        <View
            android:layout_below="@id/edi_birthday"
            android:id="@+id/divider5"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#DDDDDD"
            android:layout_marginTop="3dp"/>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:layout_below="@id/edi_birthday">
            <Button
                android:id="@+id/btn_save"
                android:layout_width="0dp"
                android:height="35dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="20dp"
                android:layout_weight="2"
                android:layout_height="40dp"
                android:text="保存"
                android:textStyle="bold"
                android:textSize="15sp"
                android:background="@drawable/bg_btn_save_config"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>