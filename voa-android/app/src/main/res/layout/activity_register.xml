<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<LinearLayout
    android:id="@+id/register_input"
    android:layout_gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="50dp">
    <!-- 输入手机号注册 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:text="  请输入手机号:"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />
    <EditText
        android:id="@+id/register_phonenum"
        android:layout_marginLeft="10dp"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:maxLines="1"
        android:background="@drawable/bg_et_register"
        android:inputType="number"
        android:hint="手机号"/>
    </LinearLayout>
    <!-- 验证码 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/register_btn_get_validateCode"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn_register_1"
            android:text="获取验证码"
            android:layout_marginLeft="20dp"
            android:textSize="15sp"
            />
        <EditText
            android:id="@+id/register_validateCode"
            android:layout_marginLeft="10dp"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:maxLines="1"
            android:background="@drawable/bg_et_register"
            android:inputType="number"
            android:hint="请输入验证码"/>

    </LinearLayout>
</LinearLayout>
    <Button
        android:layout_below="@id/register_input"
        android:id="@+id/register_btn_gonext"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_btn_register_2"
        android:layout_marginTop="30dp"
        android:text="下一步"/>
</RelativeLayout>